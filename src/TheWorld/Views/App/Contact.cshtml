@model TheWorld.ViewModels.ContactViewModel
@{
  ViewBag.Title = "Contact Page";

}
@*Very confusing.  Look at _Layout.cshtml; this script block will actually be rendered in the
*@

@section scripts {
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
  @*take up half page but center it (center it by ofsetting 3 from left)*@
  <div class="col-md-6 col-md-offset-3">
    <h2>Contact Me</h2>


    @*What's going on with validation:  the view model will be validated on server,
      but we also get client side validation emitted into view that knows about validations*@

    <form method="post">
      @*shows errors that are NOT about the individual fields.  Not sure I understand this*@
      <span asp-validation-summary="ModelOnly"></span>

      @if (ViewBag.UserMessage != null)
      {
        <div>@ViewBag.UserMessage</div>
      }

      <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-muted"> </span>
      </div>

      <div class="form-group">
        <label asp-for="Email"></label>
        <input type="Email" asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email" class="text-muted"> </span>
      </div>

      <div class="form-group">
        <label asp-for="Message"></label>
        <textarea cols="40" rows="4" asp-for="Message" class="form-control"></textarea>
        <span asp-validation-for="Message" class="text-muted"> </span>
      </div>

      <div class="form-group">
        <a asp-controller="App" asp-action ="Index" class="btn btn-default">Cancel</a>
        <input type="submit" value="Send Message" class="btn btn-success" />
      </div>
    </form>
  </div>
</div>